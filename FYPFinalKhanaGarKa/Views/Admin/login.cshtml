@model FYPFinalKhanaGarKa.Models.ViewModels.LoginViewModel
@{
    Layout = null;
}
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Login-Admin</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" type="text/css">
    <style>
        .login-page{
            margin-top:200px;
        }
    </style>
</head>
<body>
    <div class="login-page col-sm-4 col-sm-push-4">
        <h2 class="text-center">Welcome</h2>
        <form action="/admin/login" method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" class="form-control" placeholder="Enter email" asp-for="Email">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="pwd">Password:</label>
                <input type="password" class="form-control" placeholder="Enter password" asp-for="Password">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>&nbsp;</label>
                <input type="submit" class="btn btn-success pull-right form-control" value="Login">
            </div>
        </form>
    </div>
</body>
</html>