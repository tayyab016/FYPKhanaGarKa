@model IEnumerable<FYPFinalKhanaGarKa.Models.Orders>

@{
    ViewData["Title"] = "Orders";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div id="page-wrapper" style="height:100vh">
    <div class="container-fluid">
        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    Order <small>Statistics</small>
                </h1>
                <ol class="breadcrumb">
                    <li class="active">
                        <i class="glyphicon glyphicon-align-justify"></i>  &nbsp; Orders
                    </li>
                </ol>
            </div>
        </div>
        <!-- /.row -->
        <div class="row">
            <table class="table table-bordered table-hover table-striped" id="myTable">
                <thead>
                    <tr>
                        <th>
                            ID
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.OrderDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.OrderStatus)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.OrderType)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SpReq)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.City)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Area)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Street)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DeliveryCharges)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Received)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Chef)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Customer)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DeliveryBoy)
                        </th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.OrderId</td>
                            <td>
                                @Html.DisplayFor(modelItem => item.OrderDate)
                            </td>
                            <td>
                                @if (item.OrderStatus == true)
                                {
                                    <span>Delivered</span>
                                }
                                else
                                {
                                    <span>Pending</span>
                                }
                            </td>
                            <td>
                                @if (item.OrderType == true)
                                {
                                    <span>Delivery</span>
                                }
                                else
                                {
                                    <span>Collection</span>
                                }
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SpReq)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.City)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Area)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Street)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DeliveryCharges)
                            </td>
                            <td>
                                @if (item.Received == true)
                                {
                                    <span>Received</span>
                                }
                                else
                                {
                                    <span>Not Recieved</span>
                                }
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Chef.Area)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Customer.Area)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DeliveryBoy.Area)
                            </td>
                            <td>
                                <a class="btn btn-danger btn-xs" asp-action="Delete" asp-route-id="@item.OrderId">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@section scripts{
    <script>
            $(document).ready(function () {
                $('#myTable').DataTable({
                    "scrollX": true
                });
            });
    </script>
}
