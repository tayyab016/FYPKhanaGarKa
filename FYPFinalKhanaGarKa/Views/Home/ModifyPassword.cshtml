@model FYPFinalKhanaGarKa.Models.ViewModels.ModifyPassword

@{
    ViewData["Title"] = "ModifyPassword";
}

<h2>ModifyPassword</h2>

<h4>ModifyPassword</h4>
<hr />
<main class="main-content">
    <div class="login-block">
        <img src="~/img/logo_gray.png" alt="">
        <h1>Log into your account</h1>
        <form method="post" asp-action="ModifyPassword" asp-controller="Home">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                    <input asp-for="OldPassword" type="password" class="form-control" placeholder="Your Old Password" required>
                    <span asp-validation-for="OldPassword" class="text-danger"></span>
                </div>
            </div>
            <hr class="hr-xs">
            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                    <input asp-for="NewPassword" type="password" class="form-control" placeholder="New Password" required>
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>
            </div>
            <hr class="hr-xs">
            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                    <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password" required>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
            <hr class="hr-xs">
            <div class="form-group" hidden>
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-user"></i></span>
                    <input asp-for="Role" type="text" class="form-control" />
                </div>
            </div>

            <button class="btn btn-primary btn-block" type="submit"><i class="glyphicon glyphicon-hand-up"></i>&emsp; Change Password</button>

        </form>
    </div>
    
</main>



@section Scripts {
<script>
        $('body').addClass("login-page");
</script>
}
