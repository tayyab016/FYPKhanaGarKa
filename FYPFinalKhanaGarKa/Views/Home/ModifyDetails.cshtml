@model FYPFinalKhanaGarKa.Models.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Modify Details";
}

@section Styles{
    <link href="~/css/order-online.css" rel="stylesheet" />
    }
@Html.Partial("_PageTitlePartial", ViewData["Title"])

    <main class="main-content">
        <!-- Content Start -->
        <section class="cfo-area">
            <div class="container">
                <div class="row">
                    <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12 account-cfoinfo clearfix">
                        <div class="cfoaccount">
                            <ul class="list-unstyled">
                                <li><a href="#"><i class="fa fa-home" aria-hidden="true"></i> My Account</a></li>
                                <li><a href="/Order/History"><i class="fa fa-history" aria-hidden="true"></i> Order History</a></li>
                            </ul>
                        </div>
                        <!-- END OF Myaccount menu  -->
                        <!-- End of account cfoInfo -->
                    </div>
                    <div class="col-lg-9 col-md-9 col-sm-12 col-xs-12">
                        <div class="contact-details myaccount-contact">
                            <h2>Account access</h2>
                            <div class="account-table">
                                <table class="table">
                                    <tbody>
                                        <tr>
                                            <td class="commonname-td">
                                                Login Info
                                            </td>
                                            <td class="nameshow-td">
                                                @Model.Email
                                            </td>
                                        </tr>

                                        <tr>
                                            <td class="commonname-td"></td>
                                            <td class="nameshow-td">
                                                <a href="/home/modifypassword">Modify my password</a>
                                            </td>
                                        </tr>

                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <!-- END OF CONTACT DETAILS SECTION -->
                        <div class="contact-details myaccount-contact">
                            <h2>My Details</h2>
                            <div class="row">
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <div class="address-form">
                                        <div class="row">
                                            <form enctype="multipart/form-data" asp-action="Update" asp-controller="Home" method="post" class="clearfix">
                                                <input type="hidden" asp-for="Id" />
                                                <input type="hidden" asp-for="ImgUrl" />
                                                <div class="form-group">
                                                    <div class="col-lg-offset-1 col-md-offset-1 col-lg-3 col-md-3 col-sm-12 col-xs-12">
                                                        <label asp-for="Cnic">CNIC *</label>
                                                    </div>
                                                    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                                        <input asp-for="Cnic" class="form-control" value="@Model.Cnic" readonly />
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <div class="col-lg-offset-1 col-md-offset-1 col-lg-3 col-md-3 col-sm-12 col-xs-12">
                                                        <label asp-for="Role">Role *</label>
                                                    </div>
                                                    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                                        <input asp-for="Role" class="form-control" value="@Model.Role" readonly />
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <div class="col-lg-offset-1 col-md-offset-1 col-lg-3 col-md-3 col-sm-12 col-xs-12">
                                                        <label>Your Profile Pic</label>
                                                    </div>
                                                    <div class="col-lg-2 col-md-2 col-sm-12 col-xs-12">
                                                        @if (Model.ImgUrl == null) { Model.ImgUrl = "/img/avatar.png"; }
                                                        <img alt="image" src="@Model.ImgUrl" class="img img-responsive img-thumbnail" width="113" height="113">

                                                    </div>
                                                    <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                                                        <input asp-for="Image" type="file" style="margin-top:30px;" />
                                                    </div>
                                                    <span class="clearfix"></span>
                                                </div>
                                                <div class="form-group">
                                                    <div class="col-lg-offset-1 col-md-offset-1 col-lg-3 col-md-3 col-sm-12 col-xs-12">
                                                        <label asp-for="FirstName">First Name *</label>
                                                    </div>
                                                    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                                        <input asp-for="FirstName" class="form-control" value="@Model.FirstName">
                                                        <span asp-validation-for="FirstName" class="text-danger"></span>
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <div class="col-lg-offset-1 col-md-offset-1 col-lg-3 col-md-3 col-sm-12 col-xs-12">
                                                        <label asp-for="LastName">Last Name *</label>
                                                    </div>
                                                    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                                        <input asp-for="LastName" class="form-control" value="@Model.LastName">
                                                        <span asp-validation-for="LastName" class="text-danger"></span>
                                                    </div>
                                                </div>

                                                <div class="form-group">
                                                    <div class="col-lg-offset-1 col-md-offset-1 col-lg-3 col-md-3 col-sm-12 col-xs-12">
                                                        <label asp-for="Email">Email Address *</label>
                                                    </div>
                                                    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                                        <input asp-for="Email" class="form-control" value="@Model.Email">
                                                        <span asp-validation-for="Email" class="text-danger"></span>
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <div class="col-lg-offset-1 col-md-offset-1 col-lg-3 col-md-3 col-sm-12 col-xs-12">
                                                        <label asp-for="PhoneNo">Mobile No *</label>
                                                    </div>
                                                    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                                        <input asp-for="PhoneNo" class="form-control" value="@Model.PhoneNo">
                                                        <span asp-validation-for="PhoneNo" class="text-danger"></span>
                                                    </div>
                                                </div>
                                                @if (string.Equals(Model.Role, "chef", StringComparison.OrdinalIgnoreCase))
                                                {
                                                    <div class="form-group">
                                                        <div class="col-lg-offset-1 col-md-offset-1 col-lg-3 col-md-3 col-sm-12 col-xs-12">
                                                            <label asp-for="About">About Yourself *</label>
                                                        </div>
                                                        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                                            <textarea asp-for="About" class="form-control" value="@Model.About"></textarea>
                                                            <span asp-validation-for="PhoneNo" class="text-danger"></span>
                                                        </div>
                                                    </div>

                                                }

                                                <div class="form-group">
                                                    <div class="col-lg-offset-1 col-md-offset-1 col-lg-3 col-md-3 col-sm-12 col-xs-12">
                                                        <label asp-for="Gender">Gender *</label>
                                                    </div>
                                                    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                                        <select class="form-control" asp-for="Gender">
                                                            @if(Model.Gender)
                                                            {
                                                                <option value="True" selected>Male</option>
                                                                <option value="False">Female</option>

                                                            }
                                                            else
                                                            {
                                                                <option value=False selected>Female</option>
                                                                <option value=True>Male</option>

                                                            }
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <div class="col-lg-offset-1 col-md-offset-1 col-lg-3 col-md-3 col-sm-12 col-xs-12">
                                                        <label asp-for="Status">Status *</label>
                                                    </div>
                                                    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                                        <select class="form-control" asp-for="Status">
                                                            @if (Model.Status)
                                                            {
                                                                <option value = "True" selected>Active</option>
                                                                <option value = "False">Inactive</option>

                                                            }
                                                            else
                                                            {
                                                                <option value = "False" selected>Inactive</option>
                                                                <option value = "True">Active</option>

                                                            }

                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <div class="col-lg-offset-1 col-md-offset-1 col-lg-3 col-md-3 col-sm-12 col-xs-12">
                                                        <label asp-for="Dob">D/O/B *</label>
                                                    </div>
                                                    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                                        <input asp-for="Dob" class="form-control" type="date" value="@Model.Dob.ToString("yyyy-MM-dd")" />
                                                        <span asp-validation-for="Dob" class="text-danger"></span>
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <div class="col-lg-offset-1 col-md-offset-1 col-lg-3 col-md-3 col-sm-12 col-xs-12">
                                                        <label>Address *</label>
                                                    </div>
                                                    <div class="col-lg-2 col-md-2 col-sm-12 col-xs-12 select-field-wrap pull-left">
                                                        <select name="City" asp-for="City" class="search-form-select form-control">
                                                            <option selected>@Model.City</option>
                                                            <option class="sialkot" value="Sialkot">SIALKOT</option>


                                                        </select>
                                                    </div>
                                                    <div class="col-lg-2 col-md-2 col-sm-12 col-xs-12 select-field-wrap pull-left">
                                                        <select name="Area" asp-for="Area" class="search-form-select form-control">

                                                            <option class="options">@Model.Area</option>

                                                            <option class="options" value="Kashmir Road">Kashmir Road</option>
                                                            <option class="options" value="Citi Housing Society">Citi Housing Society</option>
                                                            <option class="options" value="Askari 2">Askari 2</option>
                                                            <option class="options" value="Defence Road">Defence Road</option>
                                                            <option class="options" value="Hajipura Road">Hajipura Road</option>
                                                            <option class="options" value="Khokhar Town">Khokhar Town</option>
                                                            <option class="options" value="Sambrial">Sambrial</option>
                                                            <option class="options" value="Model Town Coop Housing Society">Model Town Coop Housing Society</option>
                                                            <option class="options" value="Ugoki Road">Ugoki Road</option>
                                                            <option class="options" value="Cantt">Cantt</option>
                                                            <option class="options" value="Mag Town">Mag Town</option>
                                                            <option class="options" value="Toheed Town">Toheed Town</option>
                                                            <option class="options" value="Iqbal Town">Iqbal Town</option>
                                                            <option class="options" value="Bharath">Bharath</option>
                                                            <option class="options" value="Defence Homes Society">Defence Homes Society</option>
                                                            <option class="options" value="Cantt Avenue">Cantt Avenue</option>
                                                            <option class="options" value="Khadim Ali Road">Khadim Ali Road</option>
                                                            <option class="options" value="Wazirabad Road">Wazirabad Road</option>
                                                            <option class="options" value="Rangpura Road">Rangpura Road</option>
                                                            <option class="options" value="Hadi Town">Hadi Town</option>
                                                            <option class="options" value="Jammu Road">Jammu Road</option>
                                                            <option class="options" value="Askari 1">Askari 1</option>
                                                            <option class="options" value="Cantt Road">Cantt Road</option>
                                                            <option class="options" value="Shahab Pura Road">Shahab Pura Road</option>
                                                            <option class="options" value="AirPort Road">AirPort Road</option>
                                                            <option class="options" value="Cantt View Colony">Cantt View Colony</option>
                                                            <option class="options" value="Christien Town">Christien Town</option>
                                                            <option class="options" value="Jinnah Town">Jinnah Town</option>
                                                            <option class="options" value="Aziz Garden">Aziz Garden</option>
                                                            <option class="options" value="Neka Pura">Neka Pura</option>
                                                            <option class="options" value="Chenab Rangers Road">Chenab Rangers Road</option>
                                                            <option class="options" value="New MianaPura">New MianaPura</option>
                                                            <option class="options" value="Nishat Park">Nishat Park</option>
                                                            <option class="options" value="Daska Road">Daska Road</option>
                                                            <option class="options" value="Shahab Pura">Shahab Pura</option>
                                                            <option class="options" value="Aimanabad Road">Aimanabad Road</option>
                                                            <option class="options" value="Pasrur Road">Pasrur Road</option>
                                                            <option class="options" value="Khawar Road">Khawar Road</option>
                                                            <option class="options" value="Church Road">Church Road</option>
                                                            <option class="options" value="Aziz Bhatti Shaheed Road">Aziz Bhatti Shaheed Road</option>
                                                            <option class="options" value="Lalazar Colony">Lalazar Colony</option>
                                                            <option class="options" value="Shatab Garh">Shatab Garh</option>
                                                            <option class="options" value="Marala Road">Marala Road</option>
                                                            <option class="options" value="Umer Town">Umer Town</option>
                                                            <option class="options" value="Nawna Pind Araiyan">Nawna Pind Araiyan</option>
                                                            <option class="options" value="Sahowali">Sahowali</option>
                                                            <option class="options" value="Adalat Garh">Adalat Garh</option>
                                                            <option class="options" value="Fateh Garh Town">Fateh Garh Town</option>
                                                            <option class="options" value="Zeeshan Colony">Zeeshan Colony</option>
                                                            <option class="options" value="Kaake Wali">Kaake Wali</option>
                                                            <option class="options" value="Gulshan Iqbal">Gulshan Iqbal</option>
                                                            <option class="options" value="Mubarik Pura">Mubarik Pura</option>
                                                            <option class="options" value="Commissioner Road">Commissioner Road</option>
                                                            <option class="options" value="Muslim Colony">Muslim Colony</option>
                                                            <option class="options" value="DinPura">DinPura</option>
                                                            <option class="options" value="Civil lines">Civil lines</option>
                                                            <option class="options" value="Jinnah Park Colony No 2">Jinnah Park Colony No 2</option>
                                                            <option class="options" value="Kachehri Road">Kachehri Road</option>


                                                        </select>
                                                    </div>
                                                    <div class="col-lg-2 col-md-2 col-sm-12 col-xs-12 select-field-wrap pull-left">
                                                        <input asp-for="Street" class="form-control" placeholder="Street" value="@Model.Street" />
                                                    </div>
                                                </div>

                                                <div class="form-group">
                                                    <div class="col-lg-offset-1 col-md-offset-1 col-lg-3 col-md-3 col-sm-12 col-xs-12">
                                                        <label></label>
                                                    </div>
                                                    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                                        <button type="submit" id="sign-up" class="btn btn-primary btn-block custom-checkout">SAVE INFORMATION</button>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- END OF DELIVERY ADDRESS SECTION -->
                    </div>
                </div>
            </div>
        </section>

        <!-- Main container end -->
    </main>


