@model FYPFinalKhanaGarKa.Models.ViewModels.ForgotPasswordViewModel
@{
    ViewData["Title"] = "ForgotPassword";
}
@section Styles{
    <link href="~/css/order-online.css" rel="stylesheet" />}

    @Html.Partial("_PageTitlePartial", ViewData["Title"])
<!-- Content Start -->
<main class="main-content">
    <div class="login-block">
        <img src="~/img/logo_gray.png" alt="">
        <h1>Request Password Reset.</h1>
        <form method="post" asp-action="ForgotPassword" asp-controller="Account">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                    <input asp-for="Email" type="email" class="form-control" placeholder="Your Email" required>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <hr class="hr-xs">
            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-user"></i></span>
                    <select class="form-control" asp-for="Role">
                        <option value="customer" selected>Customer</option>
                        <option value="chef">Chef</option>
                        <option value="DBoy">DeliveryBoy</option>
                    </select>
                </div>
            </div>

            <button class="btn btn-primary btn-block" type="submit">Request reset</button>

        </form>
    </div>
    <div class="login-links">
        <p class="text-center"><a asp-controller="Account" asp-action="Login">Back to Login</a></p>
    </div>
</main>
<!-- Main container end -->
<!-- Content End -->
@section Scripts
    {
    <script>
        $('body').addClass("login-page");
    </script>
}
