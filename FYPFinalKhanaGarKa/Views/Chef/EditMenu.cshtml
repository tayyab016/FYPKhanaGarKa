@model FYPFinalKhanaGarKa.Models.ViewModels.MenuViewModel
@{
    ViewData["Title"] = "Edit Menu";
}
@section Styles{
    <link href="~/css/order-online.css" rel="stylesheet" />
    <style>
        .reg-block h1 {
            font-family: Open Sans,sans-serif;
            color: #96a2b2;
            letter-spacing: 1px;
            font-size: 22px;
            margin-bottom: 60px;
            margin-top: 40px;
            text-align: center;
        }

        #logo {
            margin-top: 40px;
        }

        #add, #Delete {
            margin-bottom: 40px;
            margin-top: 20px;
        }

        #container {
            margin-top: 20px;
            margin-bottom: 20px;
        }

        input[type=number]::-webkit-inner-spin-button,
        input[type=number]::-webkit-outer-spin-button {
            -webkit-appearance: none;
            margin: 0;
        }
    </style>
}
@Html.Partial("_PageTitlePartial", ViewData["Title"])

    <div class="container" id="container">
        <div class="row">
            <div class="reg-block col-lg-9 col-lg-offset-1 col-md-9 col-md-offset-1 col-sm-12 col-xs-12">
                <div class="contact-details myaccount-contact">
                    <center>
                        <img src="~/img/logo_gray.png" alt="" id="logo">
                        <h1>Add Dish to Your Menu</h1>
                    </center>
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="address-form">
                                <div class="row">
                                    <form enctype="multipart/form-data" method="post" class="clearfix">
                                        <input type="hidden" asp-for="MenuId" />
                                        <input type="hidden" asp-for="ImgUrl" />
                                        <div class="form-group">
                                            <div class="col-lg-offset-1 col-md-offset-1 col-lg-3 col-md-3 col-sm-12 col-xs-12">
                                                <label asp-for="DishName">DishName *</label>
                                            </div>
                                            <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                                <input asp-for="DishName" class="form-control" value="@Model.DishName" />
                                                <span asp-validation-for="DishName" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-lg-offset-1 col-md-offset-1 col-lg-3 col-md-3 col-sm-12 col-xs-12">
                                                <label>Change Dish Pic</label>
                                            </div>
                                            <div class="col-lg-2 col-md-2 col-sm-12 col-xs-12">
                                                @if (Model.ImgUrl == null)
                                                {
                                                    <img alt="image" src="~/img/foodimg/menuitem.jpg" class="img img-responsive img-thumbnail" width="113" height="113">
                                                }
                                                else
                                                {
                                                    <img alt="image" src="@Model.ImgUrl" class="img img-responsive img-thumbnail" width="113" height="113" />

                                                }
                                            </div>
                                            <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                                                <input asp-for="Image" style="margin-top:30px;" />
                                            </div>
                                            <span class="clearfix"></span>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-lg-offset-1 col-md-offset-1 col-lg-3 col-md-3 col-sm-12 col-xs-12">
                                                <label asp-for="Price">Price *</label>
                                            </div>
                                            <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                                <input asp-for="Price" type="number" class="form-control" value="@Model.Price" />
                                                <span asp-validation-for="Price" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-lg-offset-1 col-md-offset-1 col-lg-3 col-md-3 col-sm-12 col-xs-12">
                                                <label asp-for="Status">Status *</label>
                                            </div>
                                            <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                                <select class="form-control" asp-for="Status">
                                                    <option value=true selected>On Demand</option>
                                                    <option value=false>Avalible Today</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-lg-offset-1 col-md-offset-1 col-lg-3 col-md-3 col-sm-12 col-xs-12">
                                                <label asp-for="Serving">Quantity </label>
                                            </div>
                                            <div class="col-lg-3 col-md-3 col-sm-6 col-xs-6">
                                                <select class="form-control" asp-for="Serving">
                                                    <option value="1" selected> 1 </option>
                                                    <option value="2"> 2 </option>
                                                    <option value="3"> 3 </option>
                                                    <option value="4"> 4 </option>
                                                    <option value="5"> 5 </option>
                                                    <option value="6"> 6 </option>
                                                    <option value="7"> 7 </option>
                                                    <option value="8"> 8 </option>
                                                    <option value="9"> 9 </option>
                                                </select>
                                            </div>
                                            <div class="col-lg-3 col-md-3 col-sm-6 col-xs-6">
                                                <p> Servings </p>
                                            </div>
                                        </div>
                                        <div class="clearfix"></div>
                                        <div class="form-group">
                                            <div class="col-lg-offset-1 col-md-offset-1 col-lg-3 col-md-3 col-sm-12 col-xs-12">
                                                <label asp-for="Description">Description </label>
                                            </div>
                                            <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                                <textarea asp-for="Description" class="form-control" value="@Model.Description"></textarea>
                                                <span asp-validation-for="Description" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-lg-offset-1 col-md-offset-1 col-lg-3 col-md-3 col-sm-12 col-xs-12">
                                                <label></label>
                                            </div>
                                            <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
                                                <button type="submit" formaction="/Chef/EditMenu" id="add" class="btn btn-primary btn-block custom-checkout">Update</button>
                                            </div>
                                            <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
                                                <button type="submit" formaction="/Chef/DeleteMenu" id="Delete" class="btn btn-primary btn-block custom-checkout">
                                                    Delete
                                                </button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- END OF DELIVERY ADDRESS SECTION -->
            </div>
        </div>
    </div>


<!-- Main container end -->
